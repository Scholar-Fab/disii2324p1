{% extends 'base.html.twig' %}

{% block title %}Info joueur{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Info sur le joueur</h1>
    <ul>
        {% for joueur in listeJoueurs %}
        <li><a href="{{ path("infoJoueur", {id: joueur.id}) }}">{{ joueur.prenom }} / {{ joueur.email }}</a></li>
        <ul>
            {% for v in joueur.voiture %}
            <li>{{ v.marque }} / {{ v.modele }}</li>
            {% endfor %}
        </ul>
        {% endfor %}
    </ul>


</div>
{% endblock %}